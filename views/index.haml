%form(method="POST" enctype="multipart/form-data")
  %table
    %tr
      %td file:
      %td
        %input(type='file' name='file')
      %td
        %input(type="submit")
    -#%tr
      %td comment:
      %td
        %input
      %td.comment
        (optional)
    -#%tr
      %td(colspan=2 align="center")
        %input(type="submit")

%table
  - @recent.each do |metadata|
    %tr
      %td 
        %a(href="#{metadata[:md5]}/")= metadata[:filename]
      %td(align="right")= number_to_human_size metadata[:size]
